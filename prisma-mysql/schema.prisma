generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("SCHOOL_DB_URL")
}

model Student {
    id          String   @id @default(cuid())
    student_id  String   @unique
    first_name  String
    middle_name String
    last_name   String
    birth_date  DateTime
    department  String
    program     String
    year        Int
    email       String   @unique
    phone       String   @unique
    enrolled    Boolean
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
